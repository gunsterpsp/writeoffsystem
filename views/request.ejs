<%- include('../includes/include_main_header') %>
        
          <div class="main-panel">
            <div class="content-wrapper">
              <div class="page-header">
                <h3 class="page-title">
                  <span class="page-title-icon bg-gradient-primary text-white me-2">
                    <i class="mdi mdi-account-box"></i>
                  </span> REQUEST FOR DOUBTFUL ACCOUNT EVALUATION
                </h3>
                <nav aria-label="breadcrumb">
                  <ul class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">
                      <button type="button" class="btn btn-gradient-info" data-bs-toggle="modal" data-bs-target="#requestBackdrop">
                        Request
                      </button>
                    </li>
                  </ul>
                </nav>
              </div>
              <div class="row">
                <div class="col-md-12 stretch-card grid-margin">
                  <div class="card bg-gradient-light card-img-holder" style="border: 1px solid black;">
                    <div class="card-body">
                      <div class="table-responsive">
                        <table id="example" class="table table-striped" style="width:100%;">
                          <thead>
                              <tr>
                                  <th>Request No.</th>
                                  <th>Approver Status</th>
                                  <th>Progress</th>
                                  <th>Cancel Request</th>
                                  <th>Date Requested</th>
                              </tr>
                          </thead>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!-- content-wrapper ends -->




<!-- Modal -->
<div class="modal fade" id="requestBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">REQUEST FOR DOUBTFUL ACCOUNT EVALUATION</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <div class="row">
          <div class="col-md-12 stretch-card grid-margin">
            <div class="card bg-gradient-primary card-img-holder text-white">
            <div class="card-body">
              <div class="row g-1">
                <input type="hidden" name="req_id" id="request_id" value="">
                <div class="col-md-8">
                  <h4 for="" class="text-light">Requesting Branch</h4>
                  <input type="text" disabled class="form-control" value="<%= full_name %> - <%= branch_location %>" required>
                </div>
                <div class="col-md-4">
                  <h4 for="" class="text-light">Date</h4>
                  <input type="text" disabled class="form-control" id="dateToday" value="" required>
                  <input type="hidden" class="form-control" name="date_requested" id="date_requested" value="" required>
                </div>
                <div class="text-center bg-secondary col-md-12" style="padding: .5em;">
                 CLIENT INFORMATION
                </div>
                <div class="col-md-6">
                  <h4 for="" class="text-light">Client Name</h4>
                  <input type="text" class="form-control" id="client_name" name="client_name" placeholder="Provide a client name" required>
                  <div class="invalid-feedback">
                    Provide a Client Name.
                  </div>
                </div>
                <div class="col-md-6">
                  <h4 for="" class="text-light">DSB No.</h4>
                  <input type="text" class="form-control" id="dsb_no" name="dsb_no" placeholder="Provide a dsb no." required>
                  <div class="invalid-feedback">
                    Provide the DSB No.
                  </div>
                </div>

                <div class="col-md-2">
                  <h4 for="" class="text-light">Age</h4>
                  <input type="text" class="form-control" id="age" name="age" placeholder="Provide age." required>
                  <div class="invalid-feedback">
                    Provide the age.
                  </div>
                </div>
                <div class="col-md-2">
                  <h4 for="" class="text-light">Pension Type</h4>
                  <input type="text" class="form-control" id="pension_type" name="pension_type" placeholder="Provide pension type." required>
                  <div class="invalid-feedback">
                    Provide a Pension Type.
                  </div>
                </div>
                <div class="col-md-2">
                  <h4 for="" class="text-light">Loan Term</h4>
                  <input type="text" class="form-control" id="loan_term" name="loan_term" placeholder="Provide loan term." required>
                  <div class="invalid-feedback">
                    Provide the loan term.
                  </div>
                </div>
                <div class="col-md-3">
                  <h4 for="" class="text-light">Outstanding Balance</h4>
                  <input type="text" class="form-control" id="outstanding_balance" name="outstanding_balance" placeholder="Provide an Outstanding Balance." required>
                  <div class="invalid-feedback">
                    Provide an Outstanding Balance
                  </div>
                </div>

                <div class="col-md-3">
                  <h4 for="" class="text-light">Last Payment Date</h4>
                  <input type="date" class="form-control" id="last_payment_date" name="last_payment_date" required>
                  <div class="invalid-feedback">
                    Provide an Outstanding Balance
                  </div>
                </div>

                <div class="col-md-3">
                  <h4 for="" class="text-light">SSS/GSIS No.</h4>
                  <input type="text" class="form-control" id="sss_no" name="sss_no" placeholder="Provide client's SSS/GSIS No." required>
                  <div class="invalid-feedback">
                    Provide client's SSS/GSIS No.
                  </div>
                </div>


                <div class="col-md-3">
                  <h4 for="" class="text-light">Account Type</h4>
                  <select class="form-select" required id="account_type" name="account_type" style="height: 47px;
                   color: #5F5D5D; font-size: 13px;">
                    <option selected disabled value="">Select an account type</option>
                    <option value="ATM">ATM</option>
                    <option value="Passbook">Passbook</option>
                  </select>
                  <div class="invalid-feedback">
                    select an account type.
                  </div>
                </div>



                <div class="col-md-3">
                  <h4 for="" class="text-light">Name of Co-Borrower</h4>
                  <input type="text" class="form-control" id="nco_borrower" name="nco_borrower" placeholder="Input the name of co-borrower" required>
                  <div class="invalid-feedback">
                    Provide the name of co-borrower
                  </div>
                </div>

                <div class="col-md-3">
                  <h4 for="" class="text-light">Bank Name</h4>
                  <input type="text" class="form-control" id="bank_name" name="bank_name" placeholder="Input the bank name" required>
                  <div class="invalid-feedback">
                    Provide the client bank name
                  </div>
                </div>

                <div class="text-center bg-secondary col-md-12" style="padding: .5em;">
                  ACTIONS TAKEN
                 </div>
                 <div class="text-center bg-light col-md-12 text-dark" style="padding: .5em;">
                  <i>PRIMARY REQUIREMENTS</i>
                 </div>
                <div class="col-md-6" style="border: 1px solid whitesmoke; padding: 1em;">
                  <div><h4>DECEASED BORROWER</h4></div>
                  <div style="display: flex; justify-content: space-around;">
                    <div>
                      <input type="checkbox" value="true" id="dec_borrower_1"> SSS Verification
                    </div>
                    <div>
                      <input type="checkbox" id="dec_borrower_2"> Death Certificate
                    </div>
                  </div>
                </div>

                <div class="col-md-6" style="border: 1px solid whitesmoke; padding: 1em;" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(15rem, 1fr));">
                    <div><h4>OTHER THAN DECEASED <input type="text" id="other_than_dec" class="form-control" required></h4></div>
                    <div>
                      <input type="checkbox" id="other_than_dec_1"> SSS Verification
                    </div>
                    <div>
                      <input type="checkbox" id="other_than_dec_2"> Collection Letter
                    </div>
                    <div>
                      <input type="checkbox" id="other_than_dec_3"> Demand Letter
                    </div>
                    <div>
                      <input type="checkbox" id="other_than_dec_4"> Barangay Complaint
                    </div>
                    <div>
                      <input type="checkbox" id="other_than_dec_5"> Small Claims (20k & Above loan balance)
                    </div>
                </div>


                <div class="col-md-12" style="border: 1px solid whitesmoke; padding: 1em;" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(15rem, 1fr));">
                  <div class="text-light"><h4>CO-BORROWER</h4></div>
                    <div>
                      <input type="checkbox" id="cb_1"> Collection Letter
                    </div>
                    <div>
                      <input type="checkbox" id="cb_2"> Demand Letter
                    </div>
                    <div>
                      <input type="checkbox" id="cb_3"> Barangay Complaint
                    </div>
                    <div>
                      <input type="checkbox" id="cb_4"> Small Claims (20k & Above loan balance)
                    </div>
                </div>

                <div class="text-center bg-light col-md-12 text-dark" style="padding: .5em;">
                  <i>SECONDARY REQUIREMENTS</i>
                 </div>
                 <div class="col-md-12" style="border: 1px solid whitesmoke; padding: 1em;" style="display: grid; grid-template-columns: repeat(auto-fit, minmax(24rem, 1fr));">
                    <div>
                      <input type="checkbox" id="so_1"> Death Certicate (Demise to Co-Borrower)
                    </div>
                    <div>
                      <input type="checkbox" id="so_2"> Certificate of Indigency or any proof of financial incapacity of borrower or co-borrower (if any)
                    </div>
                    <div>
                      <input type="checkbox" id="so_3"> Certificate of Non-Residency or any proof of unlocation of borrower or co-borrower (if any)
                    </div>
                    <div>
                      <input type="checkbox" id="so_4"> Any proof that barangay does not accept loan complaints
                    </div>
                </div>

                <div><h4>Remarks <input type="text" id="branch_remarks" placeholder="Provide your remarks" class="form-control" required></h4></div>


                <div>
                  <button style="float: right;" id="submitId" class="btn btn-primary">Submit</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="viewBackdrop" aria-hidden="true" data-bs-backdrop="static" tabindex="-1">
  <div class="modal-dialog modal-dialog-centered modal-xl">
    <div class="modal-content">
      <div class="modal-header ">
        <h5 class="modal-title text-secondary" id="requestNo"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">        
        <div id="append_details"></div>
        <div id="approver_details" class="row g-1 bg-gradient-warning" style="padding: 0 2em 2em 2em;">
      </div>
      </div>
    </div>
  </div>
</div>

<%- include('../includes/include_main_footer.ejs') %>

<script src="js/request.js"></script>
